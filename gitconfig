[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[core]
  editor = /usr/bin/vim
  fileMode = false
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = /Users/skippednote/.gitignore

[help]
  autocorrect = 1

# [commit]
#   template = /home/skippednote/.gitmessage
[push]
  branch = current
  default = current

[pull]
  branch = current
  default = simple

[blame]
  date = short

[github]
  user = skippednote

[remote "origin"]
  prune = true

[alias]
  a   = add
  aa  = add --all
  cl  = clone
  c   = commit -v
  cm  = commit -s -m
  cam = commit -s -am
  co  = checkout
  cob = checkout -b
  d   = diff
  pu  = push
  puh = push origin HEAD
  puhf = push origin HEAD --force-with-lease
  pl  = pull
  pr  = pull --rebase
  s   = status
  sb  = status -sb
  rv  = remote -v
  rhh = reset --hard HEAD
  rhs = reset --soft HEAD
  rhm = reset --mixed HEAD
  lp  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  bl  = branch -l
  br  = branch -r
  log = log --show-signature
  cfd = clean -fd
  cf = clean -f
  ignore = update-index --assume-unchanged
  fo = fetch origin
  sl = stash list
  sp = stash pop
  sc = stash clear
  standup = log --since=yesterday.0:00am --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --author='Bassam Ismail'  --abbrev-commit
[icdiff]
	options = --highlight --line-numbers
